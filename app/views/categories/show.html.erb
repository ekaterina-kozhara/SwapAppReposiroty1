<div class="P_AllServices">
  <p id="notice"><%= notice %></p>

  <h1 class="A_H1"><%= @category.name %></h1>

<div class="O_AllServicesInCategory">
  <% @category.services.each do |service| %>
    <div class="M_ServiceCard">
      <div class="">
        <h2 class="A_H2">
          <%= link_to service.name, service_path(service) %>
        </h2>
      </div>
      <div class="">
        <%= image_tag(service.image, style:'width:231px; height:123px; border-radius: 4px; margin-top: 15px;') %>
      </div>
      <div class="A_ProfileInCard">
          <%= image_tag(service.user.image, style:'width:32px; height:32px; border-radius: 50px;') %>
          <div class="A_P2">
            <%= service.user.name %>
          </div>
      </div>
</div>
  <% end %>
</div>


