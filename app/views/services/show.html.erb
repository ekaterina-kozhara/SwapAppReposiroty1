<div class="P_MyService">

  <p id="notice"><%= notice %></p>

  <%= link_to @service.user do%>
    <div class="M_MyProfileInfo">
      <%#= image_tag(@service.user.image, style:'width:80px; height:80px; border-radius: 50px;') if @service.user.image.attached? %>
      <div class="A_H3">
        <%= link_to @service.user.name, user_path(@service.user) %>
      </div>
      <div class="A_P2">
        <%#= @user.description %>
        <%= link_to @service.user.city.name, city_path(@service.user.city) %>
      </div>
    </div>
  <% end %>

  <div class="O_OneService">
    <div class="M_OneServiceDescription">
        <div class="A_H2">
          <%= @service.name %>
        </div>
        <p class="A_P2"> Категории:
          <%= link_to @service.category.name, category_path(@service.category) %>
        </p>
        <p class="A_ServiceDescriptionInOne">
        <%= @service.description %>
        </p>
        <div class="M_ActionServiceLink">
          <%= link_to 'Редактировать', edit_service_path(@service), class: "A_Button" %>
          <%= link_to 'Добавить новое фото', new_service_image_path(@service), class: "A_Button" %>
          <%#= link_to 'Мои услуги', services_path %>
        </div>
    </div>

    <%#= link_to 'Add to favourites', services_add_to_favourite_path(service_id: @service.id), method: :post %>

    <% @service.service_images.each do |service_image| %>
      <% if service_image.image.present? %>
      <div>
        <%= image_tag service_image.image.card.url, class: "la"%>
        <%#= image_tag service_image.image.thumb.url %>
      </div>
      <% end %>
    <% end %>
    </div>

</div>
