<div class="P_UserServives">
  <p id="notice"><%= notice %></p>
  <div class="M_MyProfileInfo">
    <%= image_tag(@user.image, style:'width:80px; height:80px; border-radius: 50px;') if @user.image.attached? %>
    <div class="A_H3">
      <%= @user.name %>
    </div>
    <div class="A_P2">
      <%#= @user.description %>
      <%= link_to @user.city.name, city_path(@user.city) %>
    </div>
  </div>

  <!-- <p>
    <strong>Avatar link:</strong>
    <#%= @user.avatar_link %>
  </p> -->

  <!-- <p>
