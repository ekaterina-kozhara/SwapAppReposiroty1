  </p> -->

  <!-- <p>
    <strong>Instagram:</strong>
    <#%= @user.instagram %>
  </p> -->
  <div class="O_AllServicesOfUser">
    <% @user.services.each do |service| %>
    <div class="M_ServiceCard">
      <div class="">
        <h2 class="A_H2">
          <%= link_to service.name, service_path(service) %>
        </h2>
      </div>
      <div class="">
        <%= image_tag(service.image, style:'width:270px; height:142px; border-radius: 4px; margin-top: 15px;') %>
      </div>
      <div class="M_ServiceSettings">
        <%= link_to 'Редактировать', edit_service_path(@user), class: "A_Button" %>
        <div class="M_HideDestroy">
          <%= link_to 'Скрыть' %>
          <%= link_to 'Удалить', service, method: :delete, data: { confirm: 'Ты точно хочешь удалить это предложение?' } %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <!-- <p>
